.container-fluid.top20
    .row
        h1 Test Dashboard
            a.pull-right.glyphicon.glyphicon-question-sign(href='{{DOCS.TRACES}}'
                target="_blank" title="See documentation on GitHub")
    .row
        label.top30 Select a xAPI statements json file:
    .row
        input.file(type='file' file-reader="statementsFile")
        button.btn.btn-primary.top5(type='submit'  ng-click='submitStatementsFile()') Start statements analysis
        button.btn-info(ng-if='loadingDashboard') Loading
            span.fa.fa-refresh.fa-spin
    .row(ng-if='statementSubmitted')
        button.btn.btn-warning.top30(ng-click='generateTestVisualization()') Restart visualization test
        iframe#dashboardIframe.no-border.top10(src = "{{dashboardLink}}"
            height="{{selectedVisualizationDevList.length*250+selectedVisualizationTchList.length*250}}" width="100%")
    .row
        nav.top30
        ul.pager
            li(class="previous")
                a(href="#configureFields" role="tab" data-toggle="tab" ng-click="selectedConfigView = 'configureFields'") Previous
                    span.glyphicon.glyphicon-arrow-left
            li(class="next disabled")
                a(href="#") Next
                    span.glyphicon.glyphicon-arrow-right(aria-hidden="true")