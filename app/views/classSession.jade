extends page
block content
    .container.theme-showcase(ng-controller='ClassSessionCtrl')
        .row(ng-controller='AppCtrl')
            .col-md-12
                h1
                    label Game {{ selectedGame.title }} - Class {{ selectedClass.name }}
        .row
            .col-md-offset-2.col-md-8(ng-if='!lti.key')
                p Configure class to use lti
        .row
            .col-md-offset-2.col-md-4(ng-if='!lti.key')
                label Type the secret:
                    input.form-control(type='text' ng-model='lti.secret')
                a.btn.btn-primary(type='button', ng-click='createLtiKey()')
                    | Configure Lti
        .row
            .col-md-offset-2.col-md-8(ng-if='lti.key')
                p Introduce the key and secret values in your tool consumer (e.g Moodle)
        .row
            .col-md-offset-2.col-md-4(ng-if='lti.key')
                label KEY:
                    label.label-success {{ lti.key }}
        .row
            .col-md-offset-2.col-md-4(ng-if='lti.key')
                label Secret:
                    label.label-success  {{ lti.secret }}
        .row
            .col-md-offset-2.col-md-4(ng-if='lti.key')
                label Launch URL:
                    label.label-success  {{ lti.launch }}
        .row
            .col-md-offset-2.col-md-8(ng-if='isTeacher()')
                label Session title:
                    input.form-control(type='text' ng-model='session.name')
                a.btn.btn-primary(type='button', ng-click='createSession()')
                    span.glyphicon.glyphicon-plus.right10
                    | New class
        .row
            .col-md-offset-2.col-md-8
                table.table.table-hover
                    thead
                        tr
                            th
                            th Created
                            th(ng-if='isTeacher()') State
                    tbody
                        tr(ng-repeat='session in sessions')
                            td(ng-controller='AppCtrl')
                                span.glyphicon.glyphicon-stats
                                a(ng-href="#" ng-click='setSelectedSession(session, "data")') {{session.name}}
                            td {{session._id | prettyDateId }}
                            td(ng-if='isTeacher()')
                                button.btn-success(ng-if='!loading && sessionState(session)' ng-click='endSession(session)') Opened
                                button.btn-warning(ng-if='!loading && !sessionState(session)' ng-click='startSession(session)') Closed
                                button.btn-info(ng-if='loading') Loading
                                    span.fa.fa-refresh.fa-spin

